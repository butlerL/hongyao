<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="50dp"
        android:src="@drawable/ic_hb_theme_8001" />

    <pl.droidsonroids.gif.GifImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/giv_shake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/shake" />

    <LinearLayout
        android:id="@+id/ll_success"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_yellow"
            android:gravity="center"
            android:text="查看红包"
            android:textColor="#EC312D" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_look_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="抢更多红包"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_shake_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="分享给朋友"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>