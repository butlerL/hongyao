<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/ptr_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ViewFlipper
        android:id="@+id/vf"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D41424"
            android:clickable="true"
            android:gravity="center"
            android:onClick="toShake"
            android:text="马上去摇一摇"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_hong_bao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#d41424"
                android:drawableLeft="@drawable/ic_money_bag"
                android:drawablePadding="9dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="xx"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_use_hong_bao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="#e7e7e7"
                android:clickable="true"
                android:gravity="center"
                android:onClick="useHongBao"
                android:text="用红包"
                android:textColor="#d41424"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#979797"
            android:gravity="center"
            android:text="已抢光"
            android:textColor="@android:color/white"
            android:textSize="14dp" />
    </ViewFlipper>

</LinearLayout>