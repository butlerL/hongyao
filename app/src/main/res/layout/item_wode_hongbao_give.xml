<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_wode_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/tv_wode_hongbao_give_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/fl_wode_hongbao_get_avatar"
            android:text="###"
            android:textColor="#111111"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_wode_hongbao_give_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_wode_hongbao_give_theme"
            android:layout_below="@id/tv_wode_hongbao_give_theme"
            android:text="2016.10.10"
            android:textColor="#959595"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_wode_hongbao_give_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0.00å…ƒ"
            android:textColor="#111111"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/color_line_item" />
</LinearLayout>